{
  "name": "lightjs-svelte",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "pnpm run --dir packages/components build",
    "build:icons": "pnpm run --dir packages/icons-svg build",
    "build:utils": "pnpm run --dir packages/utils build",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "preview": "vite preview",
    "preview:docs": "pnpm run --dir docs docs:preview",
    "publish:utils": "cd packages/utils && npm publish --access public"
  },
  "devDependencies": {
    "@rollup/plugin-terser": "^0.4.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@sveltejs/vite-plugin-svelte": "^2.0.3",
    "@tsconfig/svelte": "^3.0.0",
    "@types/node": "^18.15.11",
    "autoprefixer": "^10.4.7",
    "postcss": "^8.4.14",
    "postcss-load-config": "^4.0.1",
    "rimraf": "^3.0.2",
    "rollup-plugin-uglify": "^6.0.4",
    "svelte": "^3.55.1",
    "svelte-check": "^2.10.3",
    "svelte-preprocess": "^4.10.7",
    "tailwindcss": "^3.1.5",
    "tslib": "^2.5.0",
    "typescript": "^4.9.3",
    "vite": "^4.2.0",
    "vitepress": "^1.0.0-alpha.72"
  }
}
