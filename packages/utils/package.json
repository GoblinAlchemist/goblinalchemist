{
  "name": "@light/utils",
  "version": "0.0.1-alpha.1",
  "description": "Utils of @light/components",
  "type": "module",
  "license": "MIT",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "umd": "./dist/umd/light-utils.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.cjs"
    }
  },
  "scripts": {
    "build:cjs": "tsc -b ./tsconfig.cjs.json",
    "build:es": "tsc -b ./tsconfig.esm.json",
    "build:types": "tsc -b ./tsconfig.types.json",
    "build:umd": "cross-env NODE_ENV=development rollup -c -o dist/umd/light-utils.js",
    "build:umd:min": "cross-env NODE_ENV=production rollup -c -o dist/umd/light-utils.min.js",
    "build": "pnpm run clean && npm-run-all build:cjs build:es build:types build:umd build:umd:min",
    "clean": "rimraf lib dist es",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "@rollup/plugin-commonjs": "^24.1.0",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@rollup/plugin-replace": "^5.0.2"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "typescript": "^4.7.4"
  },
  "peerDependencies": {
    "svelte": "^3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/GoblinAlchemist/light.git"
  },
  "author": "GoblinAlchemist",
  "bugs": {
    "url": "https://github.com/GoblinAlchemist/light/issues"
  },
  "homepage": "https://github.com/GoblinAlchemist/light#readme"
}
